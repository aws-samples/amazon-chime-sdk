<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amazonaws.services.chime.sdkdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AmazonChimeSDKMessagingDemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.signin.view.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.messaging.view.activity.MessagingActivity" />
        <activity android:name=".ui.channel.view.activity.ChannelActivity" />
        <activity android:name=".ui.messaging.view.activity.NotificationSettingsActivity" />
        <activity android:name=".ui.channel.view.activity.AppInstanceSettingsActivity" />
        <service
            android:name="com.amazonaws.services.chime.sdkdemo.DefaultFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>